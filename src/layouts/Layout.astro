import '../assets/fonts/RemixIcon v4.1.0/fonts/remixicon.css';
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Travels</title>
  <link rel="icon" type="image/svg+xml" href="./favicon.svg" />
</head>
<body>
  <slot />
