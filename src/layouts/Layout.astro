<style is:global>
  :root {
    --primary-color: #3685fb;
    --primary-color-dark: #2f73d9;

    --primary-color: #2c45dc;
    --primary-color-dark: #1f38c1;

    --secondary-color: #fafcff;
    --text-dark: #0d213f;
    --text-light: #767268;
    --extra-light: #fff;
    --max-width: 1200px;

  }
  * {
    padding: 0;
    margin: 0;
    box-sizing: border-box;
  }
  html {
    scroll-behavior: smooth;
  }
  body {
    font-family: 'Poppins', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  }
  a {
    text-decoration: none;
  }
  img {
    width: 100%;
    display: block;
  }
  .btn {
    padding: .75rem 2rem;
    outline: none;
    border: none;
    font-size: 1rem;
    font-weight: 500;
    color: var(--extra-light);
    background: var(--primary-color);
    border-radius: .5rem;
    cursor: pointer;
    transition: .3s;
  }
  .btn:hover {
    background: var(--primary-color-dark);
  }
  .section__container {
    max-width: var(--max-width);
    margin: auto;
    padding: 5rem 1rem;
  }
  .section__header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
    flex-wrap: wrap;
    /* margin-bottom: 4rem; */
    margin-bottom: 2rem;
  }
  .section__title {
    font-size: 2rem;
    font-weight: 600;
    color: var(--text-dark);
    margin-bottom: 1rem;
  }
  .section__subtitle {
    font-size: 1rem;
    color: var(--text-dark);
    max-width: calc(var(--max-width) / 2);
  } 
  body::-webkit-scrollbar {
    width: 12px;
  }
  body::-webkit-scrollbar-track {
    background: var(--secondary-color);
  }
  body::-webkit-scrollbar-thumb {
    background: var(--primary-color);
    border-radius: 4px;
  }
  body::-webkit-scrollbar-thumb:hover {
    background: var(--primary-color-dark);
  }
</style>