---
import { Image } from 'astro:assets';
import header1 from '../assets/images/header-1.jpg';
import header2 from '../assets/images/header-2.jpg';
import story from '../assets/images/story.jpg';
---

<header>
    <div class="section__container header__container">
      <div class="header__image">
        <img src={header1.src} alt="header" />
        <img src={header2.src} alt="header" />
      </div>
      <div class="header__content">
          <div>
              <p class="sub__header">Look Now</p>
              <h1>The Dreams <br /> come true</h1>
              <p class="section__subtitle">Lorem, ipsum dolor sit amet consectetur adipisicing elit. Quaerat, tenetur nulla.</p>
              <div class="action__btns">
                  <button class="btn">New Travel</button>
                  <div class="story">
                      <div class="video__image">
                          <img src={story.src} alt="story" />
                          <span><i class="ri-play-fill"></i></span>
                      </div>
                      <span>Watch Story</span>
                  </div>
              </div>
          </div>
      </div>
    </div>
</header>

<style>
    header {
        background: var(--secondary-color);
    }      
    .header__container {
        min-height: 100vh;
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 2rem;
    }
    .header__image {
        position: relative;
    }
    .header__image img {
        position: absolute;
        top: 50%;
        left: 50%;
        border: .5rem solid var(--extra-light);
        border-radius: 2rem;
        box-shadow: 5px 5px 30px rgba(0,0,0,.1);
    }
    .header__image img:nth-child(1) {
        max-width: 350px;
        transform: translate(-75%, -50%);
    }
    .header__image img:nth-child(2) {
        max-width: 250px;
        transform: translate(0%, -25%);
    }
    .header__content {
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .header__content > div {
        max-width: 400px;
        display: grid;
        gap: 1rem;
    }
    .header__content .sub__header {
        font-size: 1rem;
        font-weight: 600;
        color: var(--primary-color);
    }
    .header__content h1 {
        font-size: 3rem;
        line-height: 4rem;
        font-weight: 800;
        color: var(--text-dark);
    }
    .header__content .action__btns {
        display: flex;
        align-items: center;
        gap: 2rem;
        margin-top: 1rem;
    }
    .story {
        display: flex;
        align-items: center;
        gap: 2rem;
        cursor: pointer;
    }
    .video__image {
        position: relative;
    }
    .video__image img {
        width: 60px;
        height: 60px;
        border-radius: 100%;
        box-shadow: 5px 5px 30px rgba(0,0,0,.1);
    }
    .video__image span {
        position: absolute;
        top: 50%;
        left: 100%;
        transform: translate(-50%, -50%);
    }
    .video__image span i {
        padding: .5rem;
        font-size: 1rem;
        display: inline-flex;
        align-items: center;
        text-align: center;
        justify-content: center;
        color: var(--primary-color);
        background: var(--extra-light);
        border-radius: 100%;
        box-shadow: 5px 5px 30px rgba(0,0,0,.1);
    }
    .story > span {
        font-size: 1rem;
        font-weight: 600;
        color: var(--text-dark);

    }

    @media (width < 1200px) {
        .header__image img:nth-child(1) {
            max-width: 300px;
        }
        .header__image img:nth-child(2) {
            max-width: 200px;
        }
    }
    @media (width < 900px) {
        .header__container {
            grid-template-columns: repeat(1, 1fr);
            gap: 1rem;
        }
        .header__image {
            min-height: 500px;
        }
    }
    @media (width < 600px) {
        .header__image {
            display: flex;
            min-height: 400px;
            margin-top: 2rem;
        }
        .header__image img:nth-child(1) {
            max-width: 300px;
            transform: translate(-60%, -50%);
        }
        .header__image img:nth-child(2) {
            max-width: 200px;
            transform: translate(0%, -25%);
        }
    }
    @media (width < 420px) {
        .header__image img:nth-child(1) {
            max-width: 225px;
            transform: translate(-70%, -50%);
        }
        .header__image img:nth-child(2) {
            max-width: 150px;
            transform: translate(0%, -25%);
        }
    }
</style>